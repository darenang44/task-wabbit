<%= simple_form_for @task do |f| %>
  <!-- f.collection_select goes through the list of all the categories (:id and :names) that have been made
       then it prompts us to choose a category if we hadnt picked one already -->
  <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Pick A Category" }, input_html: {class: "dropdown-toggle"}  %>
  <%= f.input :title, label: "Task Title", input_html: {class: "form-control"} %>
  <%= f.input :description, label: "Task Description", input_html: {class: "form-control"}  %>
  <%= f.input :company, label: "Your Company", input_html: {class: "form-control"} %>
  <%= f.input :url, label: "Link to Task", input_html: {class: "form-control"}  %>
  <br>
  <%= f.button :submit %>
<% end %>
